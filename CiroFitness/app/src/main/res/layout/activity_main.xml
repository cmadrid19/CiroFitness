<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="100"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="-2dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_marginBottom="@dimen/padding_30">
            <ImageView
                android:id="@+id/image1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/cirofitness_logo_all">
            </ImageView>
        </FrameLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            app:counterEnabled="true"
            android:layout_marginBottom="@dimen/padding_30">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/cajaEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="email-user"
                android:inputType="textEmailAddress"
                android:textSize="@dimen/fontSize_26"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            app:counterEnabled="true"
            android:layout_marginBottom="@dimen/padding_10"
            app:passwordToggleEnabled="true">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/cajaContraseña"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:textSize="@dimen/fontSize_26"/>
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/bt_recoverPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_80"
            android:text="@string/contrasenha_olvidada"
            android:textSize="@dimen/fontSizr_16" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/padding_10">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mantener_sesion"></TextView>
        </LinearLayout>

        <Button
            android:id="@+id/bt_logIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_30"
            android:text="@string/entrar"
            android:textSize="@dimen/fontSize_26" />

        <Button
            android:id="@+id/bt_signIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_30"
            android:text="@string/registrarse"
            android:textSize="@dimen/fontSize_26" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>